#!/bin/bash

echo 'Running mypy check'
if ! mypy --config-file=mypy.ini .; then
    echo
    echo
    echo "=========================================================================="
    echo "Mypy проверка не прошла. Проверьте ошибки выше."
    echo "Для удобства работы, рекомендуется настроить mypy плагин для вашей IDE "
    echo "или использовать консольные команды, подробнее в файле CODE_CONVENTION.md"
    echo "=========================================================================="
    exit 1
fi
