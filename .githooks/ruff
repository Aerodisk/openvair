#!/bin/bash

echo 'Running ruff check'
if ! ruff check --config=ruff.toml; then
    echo
    echo
    echo "=========================================================================="
    echo "Ruff проверка не прошла. Проверьте ошибки выше."
    echo "Для удобства работы, рекомендуется настроить ruff плагин для вашей IDE "
    echo "или использовать консольные команды, подробнее в файле CODE_CONVENTION.md"
    echo "=========================================================================="
    exit 1
fi
