[Unit]
Description=control-plane service layer for cluster manipulating
Requires=docker.service
After=network.target docker.service 

[Service]
Environment="PATH=/opt/aero/openvair/venv/bin/:/usr/sbin/:/usr/bin/"
Environment="PYTHONPATH=:/opt/aero/openvair/"
Environment=PYTHONUNBUFFERED=1

WorkingDirectory=/opt/aero/openvair/openvair/modules/control_plane/service_layer/
ExecStart=/opt/aero/openvair/venv/bin/python3 -u /opt/aero/openvair/openvair/modules/control_plane/service_layer/manager.py
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target